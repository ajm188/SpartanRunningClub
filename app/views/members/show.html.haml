%h1=@member.full_name

%ul
  %li=@member.email
  %li=@member.year
  %li=@member.competitive ? 'Competitive' : 'Non Competitive'
  -if @member.officer
    %li=@member.position

.form-actions
  -if current_user.id == @member.id or current_user.officer
    =link_to 'Edit', edit_member_path(@member), class: 'btn btn-default'
  =link_to 'All Members', members_path, class: 'btn btn-default'