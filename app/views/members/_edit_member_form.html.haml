=form_for @member, html: { class: 'form-horizontal', role: 'form' } do |f|
  -if @member.errors.any?
    #error_explanation
      %h4
        =pluralize @members.errors.count, 'error'
        prohibited this member from being saved
      %ul
        -@member.errors.full_messages.each do |msg|
          %li=msg
  .form-group
    =f.label :first_name, 'First Name', class: 'control-label'
    .controls
      =f.text_field :first_name, placeholder: 'John'
  .form-group
    =f.label :last_name, 'Last Name', class: 'control-label'
    .controls
      =f.text_field :last_name, placeholder: 'Smith'
  .form-group
    =f.label :case_id, 'Case ID', class: 'control-label'
    .controls
      =f.text_field :case_id, placeholder: 'abc123'
  .form-group
    =f.label :email, class: 'control-label'
    .controls
      =f.email_field :email, placeholder: 'abc123@case.edu'
  .form-group
    =f.label :year, class: 'control-label'
    .controls
      =f.select :year, Member::YEARS, {}
  .form-group
    =f.label :competitive, class: 'control-label'
    .controls
      =f.check_box :competitive
  .form-actions
    =f.submit 'Save', class: 'btn btn-primary'
    =link_to 'Cancel', member_path(@member.id), class: 'btn btn-default'