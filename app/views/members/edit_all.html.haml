%h1.page-header Edit Members

%table.table.table-hover
	%thead
		%tr
			%th Name
			%th Case ID
			%th Email
			%th Year
			%th Competitive
			%th Officer
			%th Position
			%th Actions
	%tbody
		-@members.each do |member|
			%tr
				%td=member.full_name
				%td=member.case_id
				%td=member.email
				%td=member.year
				%td=member.competitive_string
				%td=member.officer_string
				%td=member.officer ? member.position : nil
				%td
					=link_to edit_member_path(member), class: 'btn btn-default', title: 'Edit this member', 'data-toggle' => :tooltip, target: :_blank do
						-glyphicon_tag 'pencil'
					=link_to member_path(member), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger', title: 'Delete this member', 'data-toggle' => :tooltip do
						-glyphicon_tag 'remove'
