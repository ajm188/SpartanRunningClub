!!!
%html
	%head
		%title Spartan Running Club
		=stylesheet_link_tag 'bootstrap.min.css', 'data-turbolinks-track' => true
		=stylesheet_link_tag 'bootstrap-theme.min.css', 'data-turbolinks-track' => true
		=javascript_include_tag 'bootstrap', 'data-turbolinks-track' => true
		=stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
		=javascript_include_tag 'application', 'data-turbolinks-track' => true
		=csrf_meta_tags
		%meta{ name: 'viewport', content: 'width=device-width, initial-scale=1' }
	%body{ class: controller.controller_name }
		.navbar.navbar-inverse{ role: 'navigation' }
			.container-fluid
				.navbar-header
					%button.navbar-toggle{ 'data-toggle' => 'collapse', 'data-target' => '.nav-collapse' }
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
					%a.navbar-brand{ href: '/' }Spartan Running Club
				.collapse.navbar-collapse
					%ul.nav.navbar-nav
						%li=link_to 'Members', members_path
						-# drop down later : all, competitive, non competitive, officers, (add member)
						-if current_user
							%li=link_to 'Routes', routes_path
							-# drop down later: all, (add route)
							%li=link_to 'Practice Schedule', practices_path
							%li=link_to 'Log A Run', log_a_run_path
							%li=link_to 'Spartan Link', spartan_link_path
						%li=link_to 'Contact Us', contact_path
						%li=link_to 'About Us', about_path
						-# also need to add news and events
					%ul.nav.navbar-nav.pull-right
						-if current_user
							%li.dropdown
								%a.dropdown-toggle{ href: '/', 'data-toggle' => 'dropdown' }
									=current_user.full_name
									%b.caret
								%ul.dropdown-menu{ role: 'menu' }
									%li=link_to 'View Profile', member_path(current_user.id)
									%li=link_to 'Edit Settings', edit_member_path(current_user.id)
									-if current_user.officer
										%li=link_to 'Admin Panel', admin_panel_path
									%li.divider
									%li=link_to 'Sign Out', sign_out_path, method: :delete
						-else
							%li=link_to 'Sign In', sign_in_path
		.container
			=yield