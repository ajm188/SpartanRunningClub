%tr{id: "comment_#{comment.id}"}
	%td
		=link_to comment.commenter, title: comment.commenter.full_name, 'data-toggle' => :tooltip do
			=image_tag comment.commenter.avatar(:thumb)
	%td=comment.comment
	%td
		%span{title: comment.time_string, 'data-toggle' => :tooltip}
			=comment.date_string
		-if comment.commenter == current_user
			=link_to comment, method: :delete, data: {confirm: 'Are you sure you want to delete this comment?'}, remote: true, title: 'Delete', 'data-toggle' => :tooltip do
				-glyphicon_tag 'remove'
