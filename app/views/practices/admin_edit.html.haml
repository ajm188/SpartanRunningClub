%h1.page-header Edit Practice Schedule

-if @practices.empty?
	You have no practices!
-else
	%table.table.table-striped
		%tbody
			-@practices.each do |practice|
				%tr
					%td=practice.day
					%td=practice.time
					%td
						=link_to 'Edit', edit_practice_path(practice), class: 'btn btn-mini'
						=link_to 'Delete', practice, method: 'delete', class: 'btn btn-danger btn-mini', confirm: 'Are you sure?'
.form-actions
	=link_to 'Add practice', new_practice_path, class: 'btn btn-primary'
	=link_to 'Back', admin_panel_path, class: 'btn'
