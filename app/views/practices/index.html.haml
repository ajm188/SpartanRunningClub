%h1.page-header Practice Schedule

%table.table.table-striped
	%tbody
		-if @sundays.empty?
			%tr
				%td Sunday
				%td No Practice
		-else
			-@sundays.each do |practice|
				%tr
					%td=practice.day
					%td=practice.time_string
		-if @mondays.empty?
			%tr
				%td Monday
				%td No Practice
		-else
			-@mondays.each do |practice|
				%tr
					%td=practice.day
					%td=practice.time_string
		-if @tuesdays.empty?
			%tr
				%td Tuesday
				%td No Practice
		-else
			-@tuesdays.each do |practice|
