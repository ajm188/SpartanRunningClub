=form_for @practice, html: { class: 'form-horizontal', role: 'form' } do |f|
	-if @practice.errors.any?
		#error-explanation
			%h4
				=pluralize @pratice.errors.count, 'error'
				prohibited this practice from being saved
			%ul
				-@practice.errors.full_messages.each do |msg|
					%li=msg
	.form-group
		=f.label :day, 'Day', class: 'control-label'
		.controls
			=f.select :day, Practice::DAYS, {}
	.form-group
		=f.label :time, 'Time', class: 'control-label'
		.controls
			=f.select :hour, Practice::HOURS, {}, class: 'col-md-1'
			\:
			=f.select :minute, Practice::MINUTES, {}, class: 'col-md-1'
			=f.select :am_pm, Practice::AMPM, {}, class: 'col-md-1'
	.form-actions
		=f.submit 'Save', class: 'btn btn-primary'
		=link_to t('.cancel', default: t('helpers.links.cancel')), practice_edit_path, class: 'btn btn-default'
