=form_for @carousel_item, :html => { :class => 'form-horizontal', :multipart => true, :role => 'form' } do |f|
	.input-group
		=f.label :primary_caption, 'Primary Caption', :class => 'control-label'
		=f.text_field :primary_caption, :class => 'form-control', :placeholder => 'Race Day!'
	.input-group
		=f.label :secondary_caption, 'Secondary Caption', :class => 'control-label'
		=f.text_area :secondary_caption, :class => 'form-control', placeholder: 'SRC members running a local 5k'
	.input-group
		=f.label :image, 'Image', :class => 'control-label'
		=f.file_field :image
	%br
	.form-actions
		=f.submit 'Save', :class => 'btn btn-primary'
		=link_to 'Back', edit_carousel_path, :class => 'btn btn-default'