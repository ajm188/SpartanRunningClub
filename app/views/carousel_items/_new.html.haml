=form_for @carousel_item, html: { class: 'form-inline', multipart: true, role: :form }, remote: true do |f|
	-if @carousel_item.errors.any?
		#error_explanation
			%h2="#{pluralize(@carousel_item.errors.count, "error")} prohibited this Carousel Item from being saved:"
			%ul
				-@carousel_item.errors.full_messages.each do |msg|
					%li=msg
	.form-group
		=f.label :primary_caption, 'Primary Caption:', class: 'control-label'
		=f.text_field :primary_caption, class: 'form-control', placeholder: 'Race Day!'
	.form-group
		=f.label :secondary_caption, 'Secondary Caption:', class: 'control-label'
		=f.text_field :secondary_caption, class: 'form-control', placeholder: 'SRC members running a local 5k', size: 25
	-spacer_tag
	.form-group
		=f.label :image, 'Image:', class: 'control-label'
		=f.file_field :image, style: 'display: inline-block;'
	.form-group
		=f.submit 'Add Image', class: 'btn btn-primary'
		=link_to 'Cancel', '#', class: 'btn btn-default', id: :cancel_new_carousel_form
