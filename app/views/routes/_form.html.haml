=form_for @route, html: { class: 'form-horizontal', multipart: true, role: 'form' } do |f|
	.col-md-3
		.form-group
			=f.label :title, "Title", class: 'control-label'
			=f.text_field :title, placeholder: 'My Route', class: 'form-control'
		.form-group
			=f.label :distance, "Distance", class: 'control-label'
			%a{id: :distance_popover, title: '', 'data-content' => 'Please enter a distance in miles.', 'data-placement' => :right, 'data-trigger' => :hover}
				-glyphicon_tag 'info-sign'
			=f.number_field :distance, placeholder: 2.0, class: 'form-control', step: :any
		.form-group
			=f.label :map_my_run_id, 'MapMyRun ID', class: 'control-label'
			%a{id: :map_my_run_popover, title: '', 'data-original-title' => 'What do I put here?', 'data-content' => "We need the ID of the route in MapMyRun to be able to render the map of the route. It's the part of url right after '/routes/view/<ID>'. You can either enter the full url, or just <ID>, whichever you prefer.", 'data-placement' => :right, 'data-trigger' => :hover}
				-glyphicon_tag 'question-sign'
			=f.text_field :map_my_run_id, class: 'form-control'
		.form-actions
			=f.submit 'Save', class: 'btn btn-primary'
			=link_to 'Cancel', edit_routes_path, class: 'btn btn-default'
:javascript
	$('*[id$="popover"]').popover();
