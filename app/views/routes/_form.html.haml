=form_for @route, html: { :class => 'form-horizontal', :multipart => true, :role => 'form' } do |f|
	.input-group
		=f.label :title, "Title", :class => 'control-label'
		=f.text_field :title, :placeholder => 'My Route', :class => 'form-control'
	.input-group
		=f.label :distance, "Distance", :class => 'control-label'
		=f.number_field :distance, :placeholder => 2.0, :class => 'form-control'
	.input-group
		=f.label :map_image, "Map", :class => 'control-label'
		=f.file_field :map_image
	%br
	.form-actions
		=f.submit 'Save', :class => 'btn btn-primary'
		=link_to 'Cancel', edit_routes_path, :class => 'btn btn-default'